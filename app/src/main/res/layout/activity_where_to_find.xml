<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_where_to_find"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scz.odczytgazomierza.Activities.WhereToFind">

    <TextView
        android:id="@+id/where_to_find_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#fff"
        android:elevation="10dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="32dp"
        android:fontFamily="@font/worksans_regular"
        android:text="@string/where_to_find_text"
        android:textSize="17dp" />

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/faktura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/where_to_find_info"
        android:background="#e0e0e0" />
</RelativeLayout>
